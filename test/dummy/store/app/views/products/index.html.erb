<table>
    <% @products.each do |product| %>
        <tr>
            <td><a href='/products/<%= product.id %>'><%= product.name %></a></td>
            <td><%= product.price %></td>
            <td>
              <form action='/cart' method='POST'>
                <input type='hidden' name='id' value='<%= product.id %>'>
                <input type='submit' value='Add'>
              </form>
            </td>
        </tr>
    <% end %>
</table>
